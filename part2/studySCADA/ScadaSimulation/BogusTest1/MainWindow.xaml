<mah:MetroWindow 
    x:Class="BogusTest1.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"    
    xmlns:local="clr-namespace:BogusTest1"
    mc:Ignorable="d"
    Title="Bogus Test App" Height="400" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Button x:Name="BtnGenDummyData" Content="더미데이터" Width="100" 
                Margin="10" HorizontalAlignment="Left" FontSize="14" FontFamily="한컴 말랑말랑"
                Style="{StaticResource MahApps.Styles.Button.Square.Highlight}"
                Click="BtnGenDummyData_Click"/>

        <TextBox Grid.Row="1" x:Name="RtbResult"
                     Margin="10"  FontSize="14" FontFamily="한컴 말랑말랑"
                 TextWrapping="Wrap" AcceptsReturn="True"
                 VerticalScrollBarVisibility="Visible"
                 IsReadOnly="True"
                 Style="{StaticResource MahApps.Styles.TextBox}"    />

    </Grid>
    
</mah:MetroWindow>
